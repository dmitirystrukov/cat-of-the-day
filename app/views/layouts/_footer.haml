/ Footer
%footer#footer
  .inner
    %section
      %h2 Get in touch
      %form{:action => "#", :method => "post"}
        .field.half.first
          %input#name{:name => "name", :placeholder => "Name", :type => "text"}/
        .field.half
          %input#email{:name => "email", :placeholder => "Email", :type => "email"}/
        .field
          %textarea#message{:name => "message", :placeholder => "Message"}
        %ul.actions
          %li
            %input.special{:type => "submit", :value => "Send"}/
    %section
      %h2 Follow
      %ul.icons
        %li
          %a.icon.style2.fa-twitter{:href => "#"}
            %span.label Twitter
        %li
          %a.icon.style2.fa-facebook{:href => "#"}
            %span.label Facebook
        %li
          %a.icon.style2.fa-github{:href => "#"}
            %span.label GitHub
    %ul.copyright
      %li Â© Cat of the day. All rights reserved
